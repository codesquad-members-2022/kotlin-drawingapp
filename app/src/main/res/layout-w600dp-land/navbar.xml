<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#E6E6E6"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="배경색"
        android:textColor="#323333"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_background_color"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tv_edge"
        android:backgroundTint="#D1D1D1"
        android:gravity="center"
        android:text="#D6DFE9"
        android:textAlignment="center"
        android:textColor="#323333"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_background" />

    <TextView
        android:id="@+id/tv_invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:text="투명도"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_background_color" />

    <SeekBar
        android:id="@+id/slider_invisible"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:valueFrom="1.0"
        android:valueTo="99.0"
        app:thumbRadius="6dp"
        app:thumbColor="#9DA2CC"
        app:trackColor="#C4CAFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_invisible" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:text="위치"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_invisible"
        />

    <TextView
        android:id="@+id/x_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text=""
        />

    <TextView
        android:id="@+id/x_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/x_position"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="X"
        />

    <ImageButton
        android:id="@+id/x_position_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/position"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_expand_less_24"
        />

    <ImageButton
        android:id="@+id/x_position_down"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/x_position_up"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_expand_more_24"
        />

    <TextView
        android:id="@+id/y_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/x_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text=""
        />

    <TextView
        android:id="@+id/y_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/x_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/y_position"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:text="Y"
        />

    <ImageButton
        android:id="@+id/y_position_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/x_position_down"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_baseline_expand_less_24"
        />

    <ImageButton
        android:id="@+id/y_position_down"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/y_position_up"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_expand_more_24"
        />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크기"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/y_label"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/width_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/width_value"
        android:layout_marginTop="10dp"
        android:text="W"
        />

    <TextView
        android:id="@+id/width_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text=""
        />

    <ImageButton
        android:id="@+id/width_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_baseline_expand_less_24"
        />

    <ImageButton
        android:id="@+id/width_down"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/width_up"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_expand_more_24"
        />

    <TextView
        android:id="@+id/height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/width_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/height_value"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:text="H"
        />

    <TextView
        android:id="@+id/height_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/width_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:text=""
        />

    <ImageButton
        android:id="@+id/height_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/width_down"
        android:background="@drawable/ic_baseline_expand_less_24"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/height_down"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/height_up"
        android:background="@drawable/ic_baseline_expand_more_24"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>