<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.MainActivity"
  android:id="@+id/main_layout">

  <Button
    android:id="@+id/btn_normal_rect"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#E9E6FA"
    android:drawableTop="@drawable/ic_crop_square_black_24dp"
    android:text="@string/normal_rect"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/btn_photo_rect"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_chainStyle="packed"/>

  <Button
    android:id="@+id/btn_photo_rect"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#E9E6FA"
    android:drawableTop="@drawable/ic_add_photo_alternate_black_outline_24dp"
    android:text="@string/photo_rect"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/btn_text_rect"
    app:layout_constraintStart_toEndOf="@id/btn_normal_rect"/>

  <Button
    android:id="@+id/btn_text_rect"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#E9E6FA"
    android:drawableTop="@drawable/ic_title_black_24dp"
    android:text="@string/text_rect"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/btn_photo_rect"/>

  <com.codesquard.kotlin_drawingapp.view.CustomView
    android:id="@+id/custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="150dp"
    android:layout_marginEnd="150dp"
    android:layout_marginBottom="80dp"
    app:layout_constraintBottom_toTopOf="@+id/btn_normal_rect"
    app:layout_constraintEnd_toStartOf="@id/second_constraintLayout"
    app:layout_constraintStart_toEndOf="@+id/layout_layer"/>

  <com.codesquard.kotlin_drawingapp.view.TemporaryView
    android:id="@+id/temporary_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="150dp"
    android:layout_marginEnd="150dp"
    android:layout_marginBottom="80dp"
    app:layout_constraintBottom_toTopOf="@+id/btn_normal_rect"
    app:layout_constraintEnd_toStartOf="@id/second_constraintLayout"
    app:layout_constraintStart_toStartOf="parent"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/second_constraintLayout"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:background="#E9E6FA"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/custom_view"
    app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
    android:id="@+id/layout_layer"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical"
    app:layout_constraintVertical_weight="1"
    android:background="#E9E6FA">

    <TextView
      android:id="@+id/text_layer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_layer"
      android:layout_marginTop="20dp"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="10dp"/>

  </LinearLayout>

  <TextView
    android:id="@+id/text_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/rect_background"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/btn_background"/>

  <Button
    android:id="@+id/btn_background"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_background"
    app:layout_constraintBottom_toTopOf="@+id/text_alpha"/>

  <TextView
    android:id="@+id/text_alpha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="100dp"
    android:text="@string/rect_alpha"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_background"
    app:layout_constraintBottom_toTopOf="@id/slider_alpha"/>

  <com.google.android.material.slider.Slider
    android:id="@+id/slider_alpha"
    android:layout_width="120dp"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:stepSize="1.0"
    android:valueFrom="0.0"
    android:valueTo="10.0"
    app:layout_constraintBottom_toTopOf="@id/text_position"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_alpha"/>

  <TextView
    android:id="@+id/text_position"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="112dp"
    android:text="@string/rect_position"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/slider_alpha"
    app:layout_constraintBottom_toTopOf="@+id/btn_position_x"/>

  <Button
    android:id="@+id/btn_position_x"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
    android:paddingEnd="0dp"
    android:paddingStart="8dp"
    android:gravity="start"
    android:text="X"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_position"
    app:layout_constraintBottom_toTopOf="@+id/btn_position_y"/>

  <Button
    android:id="@+id/btn_position_y"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
    android:paddingEnd="0dp"
    android:paddingStart="8dp"
    android:gravity="start"
    android:text="Y"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_position_x"/>

  <TextView
    android:id="@+id/text_size"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="112dp"
    android:text="@string/rect_size"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_position_y"
    app:layout_constraintBottom_toTopOf="@+id/btn_size_w"/>

  <Button
    android:id="@+id/btn_size_w"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
    android:paddingEnd="0dp"
    android:paddingStart="6dp"
    android:gravity="start"
    android:text="W"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_size"
    app:layout_constraintBottom_toTopOf="@+id/btn_size_h"/>

  <Button
    android:id="@+id/btn_size_h"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
    android:paddingEnd="0dp"
    android:paddingStart="8dp"
    android:gravity="start"
    android:text="H"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_size_w"/>

</androidx.constraintlayout.widget.ConstraintLayout>